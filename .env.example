# Fauxnet Web UI Configuration

# Application
APP_NAME=Fauxnet Management Interface
APP_VERSION=1.0.0
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite+aiosqlite:///./fauxnet.db

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:80,http://localhost:8080

# CORE Network Emulator Configuration
CORE_TOPOLOGY_DIR=/opt/fauxnet/topologies
# Optional: Path to file storing active CORE session ID
# CORE_SESSION_FILE=/run/core-session.sid

# Service Management
CORE_DAEMON_PORT=50051
